<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrasactionAddActivity"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/transactiontoolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                style="@style/form_toolbar"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backarrow"
                    android:src="@drawable/ic_arrow_back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/backarrow"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/detail_user_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_home_black_16dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:id="@+id/digital_accountname"
                            android:text="Manikyapavan"
                            android:textAlignment="center"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            android:id="@+id/person_name"
                            android:text="+91 8360659901"
                            android:textAlignment="center"
                            android:textStyle="normal" />


                    </LinearLayout>


                </LinearLayout>
                <!-- here need to add the pdf icon and actionbar -->


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/generatePDF"
            android:text="PDF"
            android:layout_alignParentEnd="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/transactiontoolbar"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="15dp"
                    android:id="@+id/cardview1"
                    android:background="#DBD8E9"
                    android:layout_gravity="center"
                    android:layout_below="@id/transactiontoolbar"

                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:id="@+id/outer_linearlayout"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="0"
                                android:id="@+id/moneyUgive"
                                android:layout_gravity="center"
                                android:textColor="#10C73D"
                                android:textSize="16dp"
                                android:drawableLeft="@drawable/money_green">


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/youwill"
                                android:textSize="16dp"
                                android:textStyle="normal"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="0"
                                android:id="@+id/moneyUget"
                                android:textColor="#bf1010"
                                android:textSize="16dp"
                                android:drawableLeft="@drawable/money">


                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/youwillget"
                                android:textSize="16dp"
                                android:layout_gravity="center"
                                android:textStyle="normal"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardview1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/entries"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/entries"
                                android:id="@+id/entries1"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_weight="4" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="YOU GOT"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:id="@+id/got"
                                android:layout_weight="2"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="YOU GAVE"
                                android:id="@+id/gave"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="10sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/transaction_detailsrecyclerview"
                        android:layout_below="@id/entries" />


                </RelativeLayout>

            </LinearLayout>




        </ScrollView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bottom_card"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- apply clickable action on the below linearlayout id -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_height="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/yougaveLay"
                            android:background="#D32929">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/yougave"
                                android:textColor="#ffffff"
                                android:id="@+id/yougave"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/moneywhite"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/yougave" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_height="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/yougotLay"
                            android:background="#099A3A">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/yougot"
                                android:textColor="#ffffff"
                                android:layout_marginTop="10dp"
                                android:id="@+id/yougot"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/moneywhite"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/yougot" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>

