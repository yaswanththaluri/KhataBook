<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrasactionAddActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/transactiontoolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                style="@style/form_toolbar"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backarrow"
                    android:src="@drawable/ic_arrow_back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/backarrow"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/detail_user_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_home_black_16dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:id="@+id/digital_accountname"
                            android:text="Manikyapavan"
                            android:textAlignment="center"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            android:id="@+id/person_name"
                            android:text="+91 8360659901"
                            android:textAlignment="center"
                            android:textStyle="normal" />


                    </LinearLayout>


                </LinearLayout>
                <!-- here need to add the pdf icon and actionbar -->


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardElevation="15dp"
            android:id="@+id/cardview1"
            android:background="#DBD8E9"
            android:layout_gravity="center"
            android:layout_below="@id/transactiontoolbar"

            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"

            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BCC6CC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outer_linearlayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/shield" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#013F7C"

                        android:text="@string/transactiontext" />


                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/entries"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/entries"
                        android:id="@+id/entries1"
                        android:textSize="10sp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU GOT"
                        android:layout_marginRight="10dp"
                        android:textSize="10sp"
                        android:id="@+id/got"


                        android:layout_alignParentRight="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU GAVE"
                        android:layout_marginRight="100dp"
                        android:id="@+id/gave"
                        android:textSize="10sp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transaction_detailsrecyclerview"
                android:layout_below="@id/entries" />


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@id/bottom_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BCC6CC">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addtransaction"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/addtransaction"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_below="@id/addtransaction"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/bottom_card"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- apply clickable action on the below linearlayout id -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_height="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/yougaveLay"
                            android:background="#D32929">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/yougave"
                                android:textColor="#ffffff"
                                android:id="@+id/yougave"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/moneywhite"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/yougave" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_height="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/yougotLay"
                            android:background="#099A3A">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/yougot"
                                android:textColor="#ffffff"
                                android:layout_marginTop="10dp"
                                android:id="@+id/yougot"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:background="@drawable/moneywhite"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/yougot" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>

