<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/calculator_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="HardcodedText">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toolbar"
            style="@style/form_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/toolbarText"
                style="@style/form_toolbar_text"
                android:text="@string/personagiven" />

            <ImageView
                style="@style/toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:id="@+id/cardamount"
                android:layout_marginTop="10dp"

                app:cardElevation="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/money"
                    android:inputType="numberDecimal"
                    android:id="@+id/amount"
                    android:background="@drawable/form_edittext"
                    style="@style/form_edit_text_style" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/billdetails"
                android:hint="@string/enterbill"
                android:layout_below="@id/cardamount"
                android:inputType="textShortMessage"
                android:imeOptions="actionDone"
                android:layout_marginTop="10dp"
                android:background="@drawable/form_edittext"
                style="@style/form_edit_text_style" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noDays"
                android:hint="No of days"
                android:layout_below="@id/billdetails"
                android:layout_marginTop="10dp"
                android:background="@drawable/form_edittext"
                style="@style/form_edit_text_style" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/intrest"
                android:layout_below="@id/noDays"
                android:layout_marginTop="25dp"
                android:inputType="numberDecimal"
                android:layout_marginStart="20dp"
                android:background="@drawable/form_edittext"
                style="@style/form_edit_text_style" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="22sp"
                android:id="@+id/totAmount" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D32929"
                android:text="CALUCULATE"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/calculate"
                android:layout_below="@id/noDays"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D32929"
                android:text="SAVE"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/save"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp" />


        </RelativeLayout>
    </LinearLayout>
</layout>