<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#013F7C</item>
        <item name="colorPrimaryDark">#013F7C</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="form_toolbar">
        <item name="android:background">#013F7C</item>
    </style>

    <style name="form_toolbar2">
        <item name="android:background">#ffffff</item>
    </style>
    <style name="form_toolbar_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>


    </style>
    <style name="form_edit_text_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="form_esterik">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="form_text_view">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">#53714B</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">5dp</item>


    </style>
    <style name="toolbar_back">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <!--        <item name="android:layout_alignParentStart">true</item>-->
        <item name="android:padding">12dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:visibility">visible</item>


    </style>


</resources>
